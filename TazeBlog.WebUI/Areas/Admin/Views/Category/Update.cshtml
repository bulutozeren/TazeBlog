@model TazeBlog.Entities.Concrete.Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-block">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-default">

                <div class="card-block">
                    <h5>
                        Kategori Güncelle
                    </h5>
                    <form asp-action="Update">

                        <div class="form-group form-group-default">
                            <label asp-for="Name" class="control-label">Kategori Adı</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group form-group-default">
                            <label asp-for="Permalink" class="control-label">Permalink</label>
                            <input asp-for="Permalink" class="form-control" />
                        </div>
                        <div class="form-group form-group-default">
                            <label asp-for="Description" class="control-label">Kategori Açıklaması</label>
                            <input asp-for="Description" class="form-control" />
                        </div>
                        <input hidden asp-for="Id" value="@Model.Id" />
                        <div class="col-lg-12 text-center">
                            <button class="btn btn-success btn-cons" type="submit">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>